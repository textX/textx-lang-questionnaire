/*
    Questionnaire language.

*/


Questionnaire:
    questions+=Question
;

Question:
    'Q:' text+=TextLine
    type=Type
;

Type: Free | Choice;

Free: /___+/ (regex=/\/((?:(?:\\\/)|[^\/])*)\//)?;

Choice: options+=ChoiceOption;
ChoiceOption: num=INT '.' text+=TextLine;

TextLine:  !/Q:|\d+\.|___+/ /[^\n]+/;
